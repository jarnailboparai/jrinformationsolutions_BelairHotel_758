<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns     = "http://www.w3.org/ns/widgets"

        xmlns:gap = "http://phonegap.com/ns/1.0"

        id        = "com.belairhotel.rest"

        version   = "3.1.0">

    <name>BelairHotel</name>



    <description>Crowned Australias Best Bistro in 2010 and 2011 by the AHA the Belair Hotel was specifically designed to be spacious and multifunctional aiming to meet the needs of all sorts of people meeting for all sorts of  reasons</description>

    <access origin="*" />

    <author href="http://phonegap.com" email="support@phonegap.com">

        PhoneGap Team

    </author>



    <feature name="http://api.phonegap.com/1.0/device" />



    <!-- 

    <preference name="phonegap-version" value="2.1.0" />

    -->

    <preference name="orientation"      value="default" />

    <preference name="target-device"    value="universal" />

    <preference name="fullscreen"       value="true" />



    <icon src="icon.png" />

    <gap:splash src="splash.png" />

    

    <gap:platform name="ios" />

    <gap:platform name="android" />

    <gap:plugin name="com.phonegap.plugins.pushplugin" />



	

</widget>


